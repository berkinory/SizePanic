{
  "name": "SizePanic",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "@types/bun": "^1.3.4",
      "@types/node": "^25.2.2",
      "elysia": "^1.4.21",
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "react": "^19.2.4",
      "react-dom": "^19.2.4",
      "@types/react": "^19.2.3",
      "@types/react-dom": "^19.2.3"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check": "ultracite fix && oxfmt --write .",
    "check-types": "turbo check-types",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules bun.lock",
    "docker:up": "docker compose up",
    "docker:build": "docker compose build",
    "docker:dev": "docker compose -f docker-compose.dev.yml up"
  },
  "dependencies": {
    "@SizePanic/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@SizePanic/config": "workspace:*",
    "@types/bun": "catalog:",
    "@typescript/native-preview": "latest",
    "oxfmt": "latest",
    "oxlint": "latest",
    "turbo": "^2.6.3",
    "ultracite": "7.1.5"
  },
  "overrides": {
    "vite": "8.0.0-beta.13"
  },
  "packageManager": "bun@1.3.3"
}
